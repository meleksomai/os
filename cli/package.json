{
  "name": "cli",
  "version": "0.1.0",
  "description": "Personal CLI utility by Somai",
  "type": "module",
  "bin": {
    "somai": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "dev": "tsc --watch",
    "link": "pnpm build && pnpm link --global",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:update": "vitest run --update"
  },
  "dependencies": {
    "@inquirer/prompts": "7.5.3",
    "chalk": "5.4.1",
    "commander": "14.0.0",
    "exifreader": "4.26.1",
    "ora": "8.2.0",
    "sharp": "0.34.2"
  },
  "devDependencies": {
    "@types/node": "24.10.4",
    "@workspace/typescript-config": "workspace:*",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=24"
  }
}
